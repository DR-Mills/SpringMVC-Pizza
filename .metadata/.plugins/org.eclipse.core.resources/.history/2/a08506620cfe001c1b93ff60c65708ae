package co.grandcircus.springlab;

import java.util.HashMap;

public class SpecialPizzas {
	
	HashMap<String, String> map = new HashMap<>();
	
	public void initializeMap() {

	map.put("petaNightmare", "pepperoni, salami, bacon, ham, bbq chicken, anchovies, italian sausage, chorizo, shrimp, squid, and rocky mountain oysters");
	map.put("texasHeartache", "organic (broccoli, cauliflower, mushrooms, onion, tomato, arugula, spinach, artichoke, kale, and tofu), all single sourced from the local community garden.");
	map.put("theHighSchooler", "cheese and pepperoni, with extra oily pepperoni to help your skin");
	}
	
}
